<div class="row mt-5">
	<div class="col-6 m-auto">
		<div class="card card-body">
			<h1 class="text-center mt-3">Login</h1>
			{{!-- {{> message}} --}}
			<form
				action="/users/login"
				method="POST"
				class="row d-flex flex-column align-items-center"
			>
				<div class="form-group col-10">
					<label for="email">Email</label>
					<input
						type="email"
						id="email"
						name="email"
						class="form-control"
						placeholder="Enter Email"
					/>
				</div>
				<div class="form-group mt-3 col-10">
					<label for="password">Password</label>
					<input
						type="password"
						id="password"
						name="password"
						class="form-control"
						placeholder="Enter Password"
					/>
				</div>
				<div class="row d-flex justify-content-center mt-5">
					<button
						type="submit"
						class="btn btn-info btn-block col-5"
					>Login</button>
					<a
						href="/auth/facebook"
						class="btn btn-primary btn-block col-5 ms-3"
					>Facebook Login</a>

				</div>

			</form>
			<p class="lead mt-4 ms-5">
				No Account?
				<a href="/users/register">Register</a>
			</p>
		</div>
	</div>
</div>